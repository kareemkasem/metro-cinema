<%- include("../include/top.ejs") %>
</head>

<body>
    <%- include("../include/nav.ejs") %>
    <div class="container">
        <div class="row justify-content-center">
            <form class="col-12 col-md-6" method="POST" action="/change-password" autocomplete="off">
                <% if(errorMessage){ %>
                <div class="alert alert-danger text-center my-2" role="alert">
                    <%= errorMessage %>
                </div>
                <% } %>
                <div class="form-group">
                    <label for="InputPassword">Current Password</label>
                    <input type="password" class="form-control" id="InputPassword" name="currentPassword">
                </div>
                <div class="form-group">
                    <label for="InputRetypePassword">New Password</label>
                    <input type="password" class="form-control" id="InputRetypePassword" name="newPassword">
                    <small id="passwordHelp" class="form-text text-muted">password must be between 8 and 16
                        characters</small>
                </div>
                <div class="form-group">
                    <label for="InputRetypePassword">Retype New Password</label>
                    <input type="password" class="form-control" id="InputRetypePassword" name="retypeNewPassword">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <div class="row justify-content-end mr-0">
                    <button type="submit" class="btn btn-primary">Change Password</button>
                </div>
            </form>
        </div>
    </div>

    <%- include("../include/bottom.ejs") %>