</head>

<body>
    <%- include("../include/nav.ejs") %>
    <div class="container">
        <div class="row justify-content-center">
            <form class="col-12 col-md-6" method="POST" action="/reset-password" autocomplete="off">
                <% if(errorMessage){ %>
                <div class="alert alert-danger text-center my-2" role="alert">
                    <%= errorMessage %>
                </div>
                <% } %>
                <div class="form-group">
                    <label for="InputEmail">Email address</label>
                    <input type="email" class="form-control" id="InputEmail" name="email"
                        value="<%= oldInput ? oldInput.email : undefined%>">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <div class="row justify-content-end mr-0">
                    <button type="submit" class="btn btn-primary px-4">Reset</button>
                </div>
            </form>
        </div>
    </div>

    <%- include("../include/bottom.ejs") %>