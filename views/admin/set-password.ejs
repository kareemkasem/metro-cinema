<%- include("../include/top.ejs") %>
</head>

<body>
    <div class="row bg-dark justify-content-center" style="margin: 0 !important">
        <h1 class="text-danger">Metro Admin</h1>
    </div>
    <div class="container my-5">
        <% if(errorMessage){ %>
        <div class="alert alert-danger text-center my-2" role="alert">
            <%= errorMessage %>
        </div>
        <% } %>
        <div class="row justify-content-center">
            <form class="col-12 col-md-8" method="POST" action="/admin/set-password" autocomplete="off">
                <div class="form-group">
                    <label for="InputUsername">username</label>
                    <input type="string" class="form-control" id="InputUsername" name="username"
                        placeholder="should be provided by the db admin">
                </div>
                <div class="form-group">
                    <label for="InputAuthKey">Auth Key</label>
                    <input type="password" class="form-control" id="InputAuthKey" name="authKey"
                        placeholder="should be provided by the db admin">
                </div>
                <div class="form-group">
                    <label for="InputPassword">Password</label>
                    <input type="password" class="form-control" id="InputPassword" name="password"
                        placeholder="should be provided by you now">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <div class="row justify-content-end mr-0">
                    <a href="/admin" class="btn btn-warning mr-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Add Password</button>
                </div>
            </form>
        </div>
    </div>

    <%- include("../include/bottom.ejs") %>